<div id="ticket">
  <h1><%= @project.name %></h1>
  <h2><%= @ticket.name %></h2>

  <%= simple_format(@ticket.description) %>
</div>

<%= link_to 'Edit Ticket', edit_project_ticket_path(@project, @ticket) %>
<%= link_to 'Delete Ticket', [@project, @ticket], method: :delete, data: {confirm: 'Are you sure?'} %>